<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.hs.emirim.joseoyoung.simplecalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text="단순 계산기"
        />
    <EditText
        android:id="@+id/edit_first"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="정수로 입력"
        />
    <EditText
        android:id="@+id/edit_second"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="정수로 입력"
        />
    <EditText
        android:id="@+id/edit_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="+"
        />
    <EditText
        android:id="@+id/edit_minus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="-"
        />
    <EditText
        android:id="@+id/edit_multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="×"
        />
    <EditText
        android:id="@+id/edit_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="/"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#1d3e67"
        />
</LinearLayout>
